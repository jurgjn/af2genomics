#!/bin/bash -l
# ./sbatch-af2genomics ligands | sbatch
LOGS_DATE=logs/`date +"%y-%m-%d"`
JOBNAME=sbatch-af2genomics:$1
cat - <<EOF
#!/usr/bin/env bash
#SBATCH --job-name=$JOBNAME
#SBATCH --ntasks=1
#SBATCH --mem-per-cpu=10G
#SBATCH --tmp=16834
#SBATCH --time=0-12:00:00
#SBATCH --output=$LOGS_DATE/$JOBNAME-%j.txt
snakemake --unlock
date; time snakemake --profile smk-simple-slurm-eu --snakefile workflow/Snakefile-$1.smk --rerun-triggers input
myjobs -j \$SLURM_JOB_ID
EOF